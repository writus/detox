{% extends 'detox.layout.twig' %}

{% block content %}
<main class="content" role="main">
    
    <div class="container">

        {% for post in posts %}
    
        <article class="post">
            
            <header class="post-header">
                <h3 class="post-title"><a href="/{{post.url}}">{{post.title}}</a></h3>
                <p class="post-time"><time datetime="{{post.date|date('Y-m-d')}}">{{post.date|date('d M Y')}}</time></p>
            </header>
            
            <section class="post-excerpt">
                <p>{{ post.body|striptags|truncate(400, true, '') }}&hellip;</p>
            </section>
            
            <footer class="post-footer">
                <span><!--a href="/{{post.url}}#comments"><i class="fa fa-comment"></i> Comments</a> &nbsp; &nbsp;--> 
                {% if post.categories %}
                <i class="fa fa-tag"></i> 
                {{ post.catlinks|join(' ') }}
                {% endif%}
                </span>
            </footer>
            
        </article>
    
        {% endfor %}
    
        <nav role="pagination" class="pagination">
            {% if prevPage %}
            <a href="/all/{{ prevPage }}" class="newer-posts"><i class="fa fa-chevron-circle-left"></i> Newer</a>
            {% endif %}
            <span class="page-number">Page {{ currentPage }} of {{ nbPages }}</span>
            {% if nextPage %}
            <a href="/all/{{ nextPage }}" class="older-posts">Older <i class="fa fa-chevron-circle-right"></i></a>
            {% endif %}
        </nav>

            
        
    </div>

</main>


{% endblock %}